{
  "name": "Frameworkers",
  "dockerComposeFile": ["../compose.yaml", "./compose.yaml"],
  "service": "web",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": ["Shopify.ruby-lsp"],
      "settings": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": true,
        "editor.formatOnType": true
      }
    }
  },
  "remoteUser": "root"
}
